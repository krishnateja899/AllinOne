<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_container"
    android:background="@drawable/gradient_3"
    tools:context=".Activities.UI.BackgroundsColors">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Types of gradient view which are available in the drawable folder."
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/TenD_padding"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/TenD_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_2" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/TenD_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_4" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/TenD_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_6" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_7" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/TenD_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_8" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="@dimen/twentyD_padding"
                    android:layout_marginTop="@dimen/TenD_padding"
                    android:src="@drawable/gradient_9" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>