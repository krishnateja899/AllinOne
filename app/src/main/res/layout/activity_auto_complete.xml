<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AutoCompleteSpinners">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding"
        android:text="@string/autocomplete_text" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/edit_text_autocomplete_grey_border"
        android:id="@+id/textView"
        android:padding="10dp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding"
        android:layout_height="40dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding"
        android:text="@string/autocomplete_text2" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/edit_text_autocomplete_grey_border"
        android:id="@+id/textView2"
        android:padding="10dp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding"
        android:layout_height="40dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autocomplete 3: "
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/edit_text_autocomplete_grey_border"
        android:id="@+id/textView3"
        android:padding="10dp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding"
        android:layout_height="40dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner Type 1: "
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spinner1"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner with required background: "
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spinner2"
        android:layout_marginLeft="@dimen/TenD_padding"
        android:layout_marginRight="@dimen/TenD_padding"
        android:layout_marginTop="@dimen/TenD_padding" />


</LinearLayout>